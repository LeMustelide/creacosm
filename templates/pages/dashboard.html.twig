{% extends 'base.html.twig' %}
{% block title %}Page d'administration
{% endblock %}
{% block body %}
	{{ include('overlay/_navbar.html.twig') }}
	<div class="main flex-row dashboard">
		<div>
            <div>
                <div class="flex-row">
                    <div>
                        <h1 class="title-dashboard">Surveillez la santé
                            <br>
